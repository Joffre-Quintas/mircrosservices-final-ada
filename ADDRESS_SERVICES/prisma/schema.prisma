model Users {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  city         String
  country      String
  cpf          String   @unique
  createdAt    DateTime @db.Date
  email        String   @unique
  name         String
  neighborhood String
  password     String
  state        String
  streetNumber BigInt
  updatedAt    DateTime @db.Date

  address   address? @relation(fields: [addressId], references: [id])
  addressId String?  @db.ObjectId
}

model address {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  cep          String  @unique
  street       String
  city         String
  neighborhood String
  state        String
  country      String
  number       String
  complement   String
  users        Users[]
}
