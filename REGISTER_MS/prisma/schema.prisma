// NEW schemas
model Users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String
  cpf        String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  addressId  String @db.ObjectId 
  address    Address  @relation("AddressToUsers", fields: [addressId], references: [id])
}

model Address {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  users        Users[] @relation("AddressToUsers")
  streetNumber String
  neighborhood String
  city         String
  state        String
  country      String
}